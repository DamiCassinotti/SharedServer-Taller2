{
  "name": "shared-server",
  "version": "1.0.0",
  "description": "Shared Server para Taller II",
  "main": "index.js",
  "scripts": {
    "test": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "start": "nodemon app.js",
    "start-heroku": "heroku local shared-server",
    "reset-db": "heroku pg:reset --confirm shared-server-tallerii",
    "push-db": "PGUSER=damian PGPASSWORD=password heroku pg:push damian DATABASE_URL --app shared-server-tallerii",
    "open": "heroku open"
  },
  "author": "Damian Cassinotti",
  "license": "ISC",
  "dependencies": {
    "chai": "^4.1.2",
    "express": "^4.16.3",
    "js-yaml": "^3.12.0",
    "pg": "^7.4.3",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "sinon": "^6.3.5",
    "supertest": "^3.3.0"
  }
}
